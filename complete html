        <label for="car">Car</label>
        <select name="myCar" id="car">
              <option value="audi">Audi</option>
              <option value="Grande">Grande</option>
         <!-- if you want option remain selected by default
              <option value="audi" selected>Audi</option>
              <option value="Grande" selected>Grande</option>
              -->
        </select>
    </div>
</form>

      <h3>Ids and Classes</h3>
                               <!--multiple classes can assign in this way "class space another class"-->
      <div id="mainBox" class="redBg blackBorder"> <!--id=identifier. an element can have only one id but an elent can have more than one class-->
            this is mainBox
      </div>
       <span class="redBg"></span>
      <!-- Emmet -->
      <!-- span. is for class and span# is for id -->
      <span class="redBg"></span>
      <span id="mainBox "></span>


      <h3>HTML Entities</h3>

      <div class="container">
        <p>This is a paragraph</p>
      </div>
      <div class="container">
        <!-- &nbsp is use for spacing -->
        <p>This is another &nbsp; paragraph with one space</p>
        <p>This is another &nbsp;&nbsp;paragraph with two space</p>
         <!-- if we want to write "<p>" means any tag of html then we will use the entity given below before and after tag -->
        <p>paragraph is written like this &lt;p&gt; </p>
        <!-- can also use to write the symbols which are not in keyboard from the way given below -->
        <!-- refrence for search: "html entities refrence" -->
        <p>pound is written like this &lt;p&gt;</p>
        <p>copyright is written like this &copy;</p>
        <p>this is written like this &rAarr;</p>

    </div>
